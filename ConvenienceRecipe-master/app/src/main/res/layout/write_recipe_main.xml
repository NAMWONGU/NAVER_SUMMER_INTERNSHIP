<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/pink"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back_white"
                android:layout_centerVertical="true"
                android:onClick="backClick"/>
            <TextView
                android:layout_toRightOf="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:text="레시피작성"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/preview_btn"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:textColor="@color/white"
                android:text="미리보기"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:onClick="completeClick"/>
        </RelativeLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:background="#f3f3f3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="제목"
                            android:layout_marginLeft="16dp"
                            android:textSize="15dp"
                            android:textColor="#000000"/>
                        <EditText
                            android:layout_marginLeft="16dp"
                            android:id="@+id/title_edit"
                            android:layout_width="match_parent"
                            android:layout_marginRight="16dp"
                            android:layout_height="45dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:maxLength="12"
                            android:singleLine="true"
                            android:hint="제목을 입력해주세요."
                            android:textSize="15dp"
                            android:paddingLeft="16dp"
                            android:background="@drawable/round"/>
                    </LinearLayout>

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="테마"
                            android:layout_marginLeft="16dp"
                            android:textSize="15dp"
                            android:textColor="#000000"/>
                        <Spinner
                            android:layout_marginLeft="16dp"
                            android:id="@+id/theme_list"
                            android:layout_width="match_parent"
                            android:layout_marginRight="16dp"
                            android:layout_height="45dp"
                            android:textSize="15dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/round"/>
                    </LinearLayout>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="재료"
                            android:layout_marginLeft="16dp"
                            android:textSize="15dp"
                            android:textColor="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp">
                            <EditText
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:imeOptions="actionDone"
                                android:layout_marginLeft="16dp"
                                android:id="@+id/ingredient_edit"
                                android:layout_width="225dp"
                                android:layout_height="45dp"
                                android:hint="재료를 입력해주세요."
                                android:textSize="15dp"
                                android:privateImeOptions="actionDone"
                                android:inputType="text"
                                android:background="@null"/>
                            <ImageView
                                android:id="@+id/ingredi_add"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/plus"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ListView
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="59dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/autocomplete_list"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content">
                    </ListView>

                    <ListView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="59dp"
                        android:id="@+id/list_ingredi"
                        android:layout_width="285dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round">
                    </ListView>

                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="가격"
                            android:layout_marginLeft="16dp"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:textColor="#000000"/>
                        <RelativeLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="16dp"
                            android:layout_height="45dp"
                            android:orientation="horizontal"
                            android:background="@drawable/round">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="총"
                                android:layout_marginLeft="16dp"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:textColor="#000000"/>
                            <EditText
                                android:background="@null"
                                android:id="@+id/price_edit"
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textColor="#acacac"
                                android:textAlignment="textEnd"
                                android:text="0"
                                android:layout_toLeftOf="@+id/won"/>
                            <TextView
                                android:id="@+id/won"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="원"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="16dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#000000"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:text="시간"
                            android:layout_marginLeft="16dp"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:textColor="#000000"/>
                        <RelativeLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="16dp"
                            android:layout_height="45dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal"
                            android:background="@drawable/round">
                            <EditText
                                android:background="@null"
                                android:id="@+id/time_edit"
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textColor="#acacac"
                                android:textAlignment="textEnd"
                                android:layout_toLeftOf="@+id/bun"/>
                            <TextView
                                android:id="@+id/bun"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="분"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="16dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#000000"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:focusable="true"
                    android:background="#f3f3f3"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="레시피 입력"
                        android:layout_margin="16dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:background="#f3f3f3"
                        android:id="@+id/write_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/pink"
        android:src="@drawable/recipe_plusnew222"
        android:onClick="plusClick"/>
</android.support.design.widget.CoordinatorLayout>